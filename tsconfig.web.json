{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
    "include": [
        "src/renderer/src/env.d.ts",
        "src/renderer/**/*.tsx",
        "src/renderer/**/*.ts",
        "src/preload/*.d.ts",
        "src/types.d.ts"
    ],
    "compilerOptions": {
        "strict": true,
        "composite": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/renderer/src/*"],
            "@shared/*": ["src/shared/*"],
            "@api/*": ["src/api/*"]
        }
    }
}
